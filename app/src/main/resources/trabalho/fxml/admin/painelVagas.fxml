<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
   prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="trabalho.admin.controller.PainelVagasController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="200.0" spacing="10.0"
         style="-fx-background-color: #bfcbd7;" BorderPane.alignment="CENTER">
         <padding>
            <Insets left="5.0" />
         </padding>
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButtonAction"
               prefHeight="30.0" prefWidth="70.0" text="&lt; Voltar">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label text="Painel de Vagas">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="80.0" prefWidth="200.0" spacing="10.0"
         BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="novaVagaButton" mnemonicParsing="false"
               onAction="#handleNovaVagaButtonAction" text="Nova Vaga">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="editarVagaButton" mnemonicParsing="false"
               onAction="#handleEditarVagaButtonAction" text="Editar Vaga">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets right="10.0" />
         </padding>
      </HBox>
   </bottom>
   <left>
      <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="135.0" spacing="20.0"
         BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="idField" layoutX="15.0" layoutY="20.0" promptText="Id" />
            <TextField fx:id="cargoField" promptText="Cargo" />
            <TextField fx:id="departamentoField" promptText="Departamento" />
            <TextField fx:id="salarioField" promptText="Salário" />
            <DatePicker fx:id="dataPicker" promptText="Data de Abertura" />
            <TextField fx:id="cpfRecrutadorField" promptText="Cpf/Cnpj do Recrutador" />
            <ComboBox fx:id="regimeComboBox" layoutX="10.0" layoutY="112.0" prefWidth="150.0"
               promptText="Regime" />
            <ComboBox fx:id="statusComboBox" prefWidth="150.0" promptText="Status" />
            <VBox alignment="BOTTOM_CENTER" prefHeight="141.0" prefWidth="135.0">
               <children>
                  <Button fx:id="pesquisarButton" mnemonicParsing="false"
                     onAction="#handlePesquisarButtonAction" text="Pesquisar">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="5.0" right="5.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <TableView fx:id="vagasTableView" prefHeight="200.0" prefWidth="200.0"
         BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="idColumn" prefWidth="50.0" text="Id" />
            <TableColumn fx:id="cargoColumn" prefWidth="75.0" text="Cargo" />
            <TableColumn fx:id="departamentoColumn" prefWidth="90.0" text="Departamento" />
            <TableColumn fx:id="salarioColumn" prefWidth="75.0" text="Salário" />
            <TableColumn fx:id="dataColumn" prefWidth="90.0" text="Data Abertura" />
            <TableColumn fx:id="cpfRecrutadorColumn" prefWidth="125.0" text="Recrutador" />
            <TableColumn fx:id="regimeColumn" prefWidth="70.0" text="Regime" />
            <TableColumn fx:id="statusColumn" prefWidth="70.0" text="Status" />
         </columns>
      </TableView>
   </center>
</BorderPane>