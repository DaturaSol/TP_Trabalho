<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
   prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="trabalho.admin.controller.PainelUsuariosController">
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="200.0" spacing="10.0"
         style="-fx-background-color: #bfcbd7;" BorderPane.alignment="CENTER">
         <padding>
            <Insets left="5.0" />
         </padding>
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButtonAction"
               prefHeight="30.0" prefWidth="70.0" text="&lt; Voltar">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label text="Painel de Usuarios">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <bottom>
      <HBox alignment="CENTER_RIGHT" prefHeight="80.0" prefWidth="200.0" spacing="10.0"
         BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="novoUsuarioButton" mnemonicParsing="false"
               onAction="#handleNovoUsuarioButtonAction" text="Novo Usuario">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="editarUsuarioButton" mnemonicParsing="false"
               onAction="#handleEditarUsuarioButtonAction" text="Editar Usuario">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="excluirUsuarioButton" mnemonicParsing="false"
               onAction="#handleExcluirUsuarioButtonAction" text="Excluir Usuario">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
         <opaqueInsets>
            <Insets left="5.0" />
         </opaqueInsets>
      </HBox>
   </bottom>
   <left>
      <VBox alignment="BOTTOM_CENTER" prefHeight="420.0" prefWidth="135.0" spacing="10.0"
         BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="cpfField" prefHeight="26.0" prefWidth="135.0" promptText="CPF/CNPJ" />
            <TextField fx:id="nomeField" promptText="Nome" />
            <TextField fx:id="emailField" promptText="Email" />
            <TextField fx:id="enderecoField" promptText="Endereço" />
            <TextField fx:id="telefoneField" promptText="Telefone" />
            <TextField fx:id="cargoField" promptText="Cargo" />
            <TextField fx:id="departamentoField" promptText="Departamento" />
            <TextField fx:id="salarioField" promptText="Salário" />
            <VBox alignment="BOTTOM_CENTER" prefHeight="147.0" prefWidth="125.0">
               <children>
                  <Button fx:id="pesquisarButton" mnemonicParsing="false"
                     onAction="#handlePesquisarButtonAction" text="Pesquisar">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <TableView fx:id="userTableView" prefHeight="200.0" prefWidth="200.0"
         BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="cpfColumn" prefWidth="75.0" text="CPF/CNPJ" />
            <TableColumn fx:id="nomeColumn" prefWidth="75.0" text="Nome" />
            <TableColumn fx:id="emailColumn" prefWidth="75.0" text="Email" />
            <TableColumn fx:id="enderecoColumn" prefWidth="75.0" text="Endereço" />
            <TableColumn fx:id="telefoneColumn" prefWidth="75.0" text="Telefone" />
            <TableColumn fx:id="cargoColumn" prefWidth="75.0" text="Cargo" />
            <TableColumn fx:id="departamentoColumn" prefWidth="105.0" text="Departameneto" />
            <TableColumn fx:id="salarioColumn" prefWidth="75.0" text="Salário" />
         </columns>
      </TableView>
   </center>
</BorderPane>