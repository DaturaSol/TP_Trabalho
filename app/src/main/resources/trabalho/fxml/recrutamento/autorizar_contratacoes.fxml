<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trabalho.recrutamento.controller.AutorizarContratacoesController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnVoltar" mnemonicParsing="false" onMouseClicked="#voltarTela" text="&lt; Voltar" />
            <Label text="Autorizar Contratações Pendentes">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnAtualizar" mnemonicParsing="false" text="Atualizar Lista" />
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <TitledPane animated="false" collapsible="false" text="Solicitações Pendentes" BorderPane.alignment="CENTER">
         <content>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
               <content>
                  <FlowPane fx:id="flowResultados" hgap="10.0" vgap="10.0" />
               </content>
            </ScrollPane>
         </content>
      </TitledPane>
   </center>
</BorderPane>