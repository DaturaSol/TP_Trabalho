<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.VPos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trabalho.recrutamento.controller.RealizarEntrevistaController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButtonAction" text="&lt; Voltar" />
            <Label text="Realizar Entrevista">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="130.0" />
                  <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Entrevista Agendada:" />
                  <Label text="Nota (0-10):" GridPane.rowIndex="1" />
                  <Label text="Resultado:" GridPane.rowIndex="2" />
                  <Label text="Parecer:" GridPane.valignment="TOP" GridPane.rowIndex="3" />
                  <ComboBox fx:id="comboEntrevista" prefWidth="480.0" GridPane.columnIndex="1" />
                  <TextField fx:id="txtNota" promptText="Digite a nota de 0 a 10" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <ComboBox fx:id="comboResultado" prefWidth="480.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextArea fx:id="txtParecer" prefHeight="200.0" prefWidth="200.0" promptText="Digite seu parecer sobre a entrevista" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <TitledPane animated="false" collapsible="false" text="Dados da Entrevista Selecionada">
               <content>
                  <TextArea fx:id="txtDadosEntrevista" editable="false" prefHeight="140.0" prefWidth="200.0" />
               </content>
            </TitledPane>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="btnRealizar" defaultButton="true" mnemonicParsing="false" text="Registrar Resultado" />
                  <Button fx:id="btnLimpar" mnemonicParsing="false" text="Limpar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
